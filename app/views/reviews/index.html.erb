<div class="review-list">
  <ul-inline>
    <h1>All Reviews</h1>

    <!-- Review Banner -->
    <div class="review-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @van.photo  %>)">
    </div>

    <!-- Review List -->
    <% @reviews.each do |review| %>
      <div class="comment">
        <div class="review-content">
          <!-- Ratings -->
          <% review.score.times do %>
            <i class="fa fa-star"></i>
          <% end %>
          <% (5 - review.score).times do %>
            <i class="fa fa-star-o"></i>
          <% end %>
          <!-- User and Date/Time -->
          <p>By <strong><%= User.find(review.user_id).email %></strong> on <strong><%= review.created_at.strftime("%d %b %Y") %></strong></p>
          <!-- Description -->
          <%= review.description %>
        </div>
        <div class="review-photo">
          <% if review.photo? %>
            <%= cl_image_tag review.photo, height: 150, width: 250, crop: :fill %>
          <% end %>
        </div>
      </div>
    <% end %>
  </ul-inline>
</div>

<%= content_for(:title, "All Reviews") %>
