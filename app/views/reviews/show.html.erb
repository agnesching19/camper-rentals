
<div class="container reviews">

  <div class="row text-center">
    <div class="col-md-6 col-md-offset-3">
      <h3>Scores:
        <% @review.score.times do %>
          <i class="fa fa-star"></i>
        <% end %>
        <% (5 - @review.score).times do %>
          <i class="fa fa-star-o"></i>
        <% end %>
      </h3>
    </div>
  </div>

  <div class="row text-center">
    <div class="col-md-6 col-md-offset-3">
      <h3>Description:
        <%= @review.description %>
      </h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= cl_image_tag @review.photo, height: 300, width: 400, crop: :fill %>
    </div>
  </div>

  <%= link_to "Back", van_path(@review.van_id) %>
</div>
